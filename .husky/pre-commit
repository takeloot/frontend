(
    echo 'ğŸ¤¡ Failed Type check. Are you seriously trying to write that? Make the changes required above.'
    false;
)

# If everything passes... Now we can commit
echo 'ğŸ¤” Alright. Code looks good to me. Trying to build now.'

pnpm build ||
(
    echo 'âŒ Next build failed: View the errors above to see why. 
    '
    false;
)

# If everything passes... Now we can commit
echo 'âœ… You win this time. I am committing this now.'